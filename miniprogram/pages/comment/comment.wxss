/* pages/comment/comment.wxss */
/* 1.背景图片 模糊*/
.detail-container{
  height:400rpx;/*背景图片高度*/
  opacity: .9;/*透明度*/
  filter:blur(40rpx);/*高斯模糊滤镜*/
}
/* 2.添加灰色遮罩层 */
.detail-mask{
  position: absolute; /*绝对定位*/
  left: 0; 
  top:0;
  z-index: -1;        /*显示在模糊图片的底层*/
  width: 100%;        /*高度撑满整个父元素*/
  height:400rpx;      /*高度同上*/
  background:#333;  /*深色背景*/
  opacity: .3;
}
/* 3.电影的详情信息 */
.detail-info{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;        /*高度撑满整个父元素*/
  height:400rpx;      /*高度同上*/
  padding: 20rpx;
  display: flex;      /*弹性布局*/
  /* z-index: 20; */
}
/* 4.左侧图片 */
.detail-img{
  width:280rpx;       /*电影图片宽度*/
  height:90%;         /*电影图片高度*/
  margin-right: 24rpx;/*右侧文字之间距离*/
}
/* 5.右侧文字区域 介绍 */
.detail{
  line-height:60rpx;

}
.detail view{     /*介绍 标题*/
  color:#fff;
  font-size:24rpx;
}
/* 6.预览图片 */
.comment-img{
  width:200rpx;
  height:200rpx;
  margin-right:20rpx;
}


