<!--pages/profile/profile.wxml-->
<!-- <text>pages/profile/profile.wxml</text> -->
<view class="profile">
  <view class="profile-img">
  <!-- 获取当前登录用户头像信息 -->
  <!-- 头像圆 在profile的中间显示 -->
    <open-data type="userAvatarUrl" class="userimg"></open-data>
  </view>
  <view class="profile-name">
  <!-- 获取当前登录用户昵称 -->
    <open-data type="userNickName"></open-data>
  </view>
</view>
<!-- 获取用户信息 :询问是否允许 -->
<button open-type="getUserInfo" bindgetuserinfo="getUser">
 获取用户信息
</button>
